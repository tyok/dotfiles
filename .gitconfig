[user]
    name         = Mohammad Satrio
	email        = wolfaeon@gmail.com
[core]
    editor       = vim
    excludesfile = .gitignore
[color]
    diff         = auto
    status       = auto
    branch       = auto
    interactive  = auto
    ui           = true
    pager        = true
[alias]
    a            = add
    ad           = add
    d            = diff
    st           = status
    s            = status -s
    ci           = commit
    co           = checkout
    w            = whatchanged
    wiff         = diff --word-diff-regex="[^[:space:],.()]+"
    ciff         = diff --color-words --word-diff-regex="[^[:space:],.()]+"
    find         = log -p -G
    in-out       = log -p -S
    amend        = commit --amend -C HEAD
    l            = log
    lol          = !git log --pretty=aeonshort
    lstat        = !git log --patch-with-stat --summary
    dh           = diff HEAD
    d1           = diff HEAD~1
[format]
    pretty       = format:%C(bold yellow)%h%Creset %s %C(red)%d%Creset %n%Cgreen%ar%Creset %n%C(blue)%an%Creset%n 
[pretty]
    aeonshort    = format:%C(bold yellow)%h%Creset %s%Creset ------- %C(blue)%an
[merge]
    tool         = vimdiff
[blame]
    date         = short
    showemail    = true
